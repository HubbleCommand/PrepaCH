<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:controls="clr-namespace:PrepaCH.Views"
             x:Class="PrepaCH.Views.RankTesterViews.RankMCQText">
	<Grid RowDefinitions="*, Auto, Auto"
		  ColumnDefinitions="*, *">
		<controls:RankCard x:Name="RankCard"
						   Grid.Row="0"
						   Grid.ColumnSpan="2"
						   WidthRequest="200"
						   HeightRequest="300" />
		<RadioButton x:Name="A"
					 Content="A"
					 Value="0"
					 Grid.Row="1"
					 Grid.Column="0"
					 TextColor="White"
					 CheckedChanged="OnAnswerChanged">
		</RadioButton>
		<RadioButton x:Name="B"
					 Content="B"
					 Value="1"
					 Grid.Row="1"
					 Grid.Column="1"
					 TextColor="White"
					 CheckedChanged="OnAnswerChanged">
		</RadioButton>
		<RadioButton x:Name="C"
					 Content="C"
					 Value="2"
					 Grid.Row="2"
					 Grid.Column="0"
					 TextColor="White"
					 CheckedChanged="OnAnswerChanged">
		</RadioButton>
		<RadioButton x:Name="D"
					 Content="D"
					 Value="3"
					 Grid.Row="2"
					 Grid.Column="1"
					 TextColor="White"
					 CheckedChanged="OnAnswerChanged">
		</RadioButton>
	</Grid>
</ContentView>
